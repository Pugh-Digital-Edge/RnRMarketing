        }

            #banner-1401 .cs-link:last-of-type {
                /* remove the chevron on the last list item */
            }

                #banner-1401 .cs-link:last-of-type::after {
                    display: none;
                }

            #banner-1401 .cs-link:after {
                /* chevron */
                content: "";
